<!DOCTYPE html>
<html>
    <head>
        <title>Chat app</title>
        <style>
            #chat-messages {
                display: flex;
                flex-direction: column;
            }
        </style>
    </head>
    <body>
        <center><h1><%=roomname%></h1></center>
        <div id="chat-messages">

        </div>
        <div id="send-message">
            <div>
                <input id="write-message" type="text" placeholder="write message...">
            </div>
            <button onclick="sendMessage()">Send</button>
        </div>
        <script src="../socket.io/socket.io.js"></script>
        <script>
            var roomid = JSON.parse("<%=room%>");
            const socket = io('/chatroom/'+roomid);
            var msg = '';

            function sendMessage() {
                msg = document.getElementById('write-message').value;
                socket.emit('msg', {msg: msg, id: roomid});
            }
            socket.on('msg', (data) => {
                var node = document.createElement('div');
                var msgdata = document.createTextNode(data);
                document.getElementById("chat-messages").appendChild(node.appendChild(msgdata));
            });
        </script>
    </body>
</html>